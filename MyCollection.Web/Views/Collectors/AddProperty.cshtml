@model MyCollection.Web.Models.PropertyCollectorViewModel
@{
    ViewData["Title"] = "Crear";
}

<h2>Crear</h2>

<h4>Propiedad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProperty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CollectorId" />

            <partial name="_Property" />

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.CollectorId" class="btn btn-outline-dark">Regresar a Cobrador</a>
            </div>
        </form>
    </div>
</div>
