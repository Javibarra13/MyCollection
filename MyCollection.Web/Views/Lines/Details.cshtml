@model MyCollection.Web.Data.Entities.Line

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Line</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-info">Edit</a>
    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
</div>

<h4>Sublines</h4>
@if (Model.Sublines.Count == 0)
{
    <h5>Not sublines added yet.</h5>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sublines)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}