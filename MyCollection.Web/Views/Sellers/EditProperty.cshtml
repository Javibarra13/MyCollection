@model MyCollection.Web.Models.PropertySellerViewModel
@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Propiedad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProperty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SellerId" />
            <input type="hidden" asp-for="Id" />

            <partial name="_Property" />

            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.SellerId" class="btn btn-outline-dark">Regresar a Vendedor</a>
            </div>
        </form>
    </div>
</div>
