@model MyCollection.Web.Models.PropertySellerViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Property</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProperty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SellerId" />

            <partial name="_Property" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.SellerId" class="btn btn-outline-dark">Back to Seller</a>
            </div>
        </form>
    </div>
</div>
