@model MyCollection.Web.Data.Entities.Concept

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Concepto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <div class="col-md-10">
                    <input type="radio" asp-for="Type" value="Cargo" /> Cargo
                    <input type="radio" asp-for="Type" value="Abono" /> Abono
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Regresar</a>
            </div>
        </form>
    </div>
</div>

