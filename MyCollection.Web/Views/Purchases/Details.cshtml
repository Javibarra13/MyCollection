@model MyCollection.Web.Data.Entities.Purchase
@{
    ViewData["Title"] = "Detalles";
}

<h2>Compra</h2>
<div class="row">
    <div class="col-md-3">
        <div>
            <h4>Datos</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Warehouse)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Warehouse.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Warehouse.Address)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Warehouse.Address)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Warehouse.Neighborhood)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Warehouse.Neighborhood)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Warehouse.City)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Warehouse.City)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Warehouse.Phone)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Warehouse.Phone)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Warehouse.Contact)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Warehouse.Contact)
                </dd>
            </dl>
        </div>
    </div>
    <div class="col-md-3">
        <div>
            <h4>Referencias</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Compra Id
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.StartDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Remarks)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Remarks)
                </dd>
            </dl>
        </div>
    </div>
    <div class="col-md-6">
        <div>
            <h4>Detalles de Productos</h4>
            <hr />
            @if (Model.PurchaseDetails.Count == 0)
            {
                <h5>No hay productos agregados.</h5>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Producto Id
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PurchaseDetails.FirstOrDefault().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PurchaseDetails.FirstOrDefault().Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PurchaseDetails.FirstOrDefault().Quantity)
                            </th>
                            <th>
                                Imagenes
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PurchaseDetails)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product.ProductImages.Count)
                                </td>
                                <td>
                                    <a asp-action="DetailsProduct" asp-route-id="@Model.Id" class="btn btn-outline-warning">Detalles</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-dark">Regresar</a>
    </div>
</div>