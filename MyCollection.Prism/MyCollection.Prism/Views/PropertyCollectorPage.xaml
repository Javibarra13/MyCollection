<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MyCollection.Prism.Views.PropertyCollectorPage"
             Title="{Binding Title}">
    <ScrollView>
    <StackLayout
        Padding="10">
        <ffimageloading:CachedImage
                Aspect="AspectFit"
	            Source="{Binding PropertyCollector.FirstImage}"
	            LoadingPlaceholder= "LoaderImage"
                HeightRequest="300"
	            ErrorPlaceholder= "ErrorImage"
	            CacheDuration= "50"
	            RetryCount= "3"
	            RetryDelay= "600"
	            DownsampleToViewSize = "true"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Serie"/>
            <Label
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding PropertyCollector.Serie}"/>
            <Label
                Grid.Row="1"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Company"/>
            <Label
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding PropertyCollector.Company}"/>
            <Label
                Grid.Row="2"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Model"/>
            <Label
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding PropertyCollector.Model}"/>
            <Label
                Grid.Row="3"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Colour"/>
            <Label
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding PropertyCollector.Colour}"/>
            <Label
                Grid.Row="4"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Price"/>
            <Label
                Grid.Row="4"
                Grid.Column="1"
                Text="{Binding PropertyCollector.Price, StringFormat='{0:C2}'}"/>
            <Label
                Grid.Row="5"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Property Type"/>
            <Label
                Grid.Row="5"
                Grid.Column="1"
                Text="{Binding PropertyCollector.PropertyType}"/>
            <Label
                Grid.Row="6"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Is Available?"
                VerticalOptions="Center"/>
            <CheckBox
                Grid.Row="6"
                Grid.Column="1"
                HorizontalOptions="Start"
                IsEnabled="False"
                IsChecked="{Binding PropertyCollector.IsAvailable}"/>
        </Grid>
    </StackLayout>
    </ScrollView>
</ContentPage>